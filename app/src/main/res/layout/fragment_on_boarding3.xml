<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#6ED5CB">


    <ImageView
        android:id="@+id/onBoardImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/surgimg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/baloo"
        android:text="Solar Explore"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@id/onBoardImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/onBoardImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/learnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="Interact"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/onBoardImg"
        app:layout_constraintTop_toBottomOf="@id/onBoardImg"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/AstroText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="Everything"
        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/learnText"
        app:layout_constraintTop_toBottomOf="@id/learnText"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/interactDis"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/baloo"
        android:text="Say hello to the planets. Interact with the mysteries of the universe."
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/AstroText"
        app:layout_constraintTop_toBottomOf="@id/AstroText"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent=".5" />

    <Button
        android:id="@+id/startedButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@color/purple_700"
        android:fontFamily="@font/baloo"
        android:text="Get Started"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/interactDis"
        app:layout_constraintTop_toBottomOf="@id/interactDis"
        app:layout_constraintVertical_bias="0" />

    <View
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/button_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/interactDis"
        app:layout_constraintTop_toBottomOf="@id/interactDis"
        app:layout_constraintVertical_bias="0" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:scaleY="2"
        android:scaleX="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/interactDis"
        app:layout_constraintTop_toBottomOf="@id/interactDis"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_percent=".5"
        android:layout_marginTop="100dp"
        android:src="@drawable/tab3_icon"/>


</androidx.constraintlayout.widget.ConstraintLayout>